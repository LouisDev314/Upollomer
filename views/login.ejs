<html>
    <head>
        <title>Log in —— Upollomer</title>
    </head>
    <body>
        <header>
            <h1>Upollomer</h1>
            <h2>Log in</h2>
        </header>
        <section class="loginForm">
            <fieldset>
                <% if (messages.error) { %>
                    <div class="loginFlash">
                        <%= messages.error %>
                    </div>
                <% } %>
                <br>
                <form action="/login" method="POST">
                    <!-- Need to add email login too -->
                    <div>
                        <label for="username">Username</label>
                        <br>
                        <input type="username" id="username" name="username" required>
                    </div>
                    <br>
                    <div>
                        <label for="password">Password</label>
                        <br>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <p><button type="submit">Log in</button> or <a href="/register">Create profile</p>
                </form>
            </fieldset>
        </section>
    </body>
</html>