<fieldset>
    <% if (locals.message) { %>
        <div class="postIdeaFlash">
            <%= message %> 
        </div>
    <% } %>
    <br>
    <div class="ideaTag">
        <label for="category">Category</label>
        <select name="category" id="category">
            <option selected disabled hidden>Select ——</option>
            <% if (locals.category) { %>
                <% category.forEach(option => { %>
                    <option value="<%= option %>"><%= option %></option>
                <% }) %>
            <% } %>
        </select>
        &emsp;
        <label for="genre">Genre</label>
        <select name="genre" id="genre">
            <option selected disabled hidden>Select ——</option>
        </select>
    </div>
    <br>
    <div class="ideaTitle">
        <label for="title">Title</label>
        <br>
        <input type="text" id="title" name="title" value="<%= idea.title %>" required>
    </div>
    <br>
    <div class="ideaDescription">
        <label for="description">Description</label>
        <br>
        <textarea style="resize:none" rows="8" cols="45" maxlength="300" id="description" name="description" value="<%= idea.description %>" required></textarea>
    </div>
    <br>
    <!-- Country-Region Dropdown -->
    <div class="form-group">
        <label class="col-sm-2 control-label">Country</label>
        <div class="col-sm-10">
            <select name="country" class="form-control gds-cr" country-data-region-id="gds-cr-one" ></select>
        </div>
    </div>
    <br>
    <div class="form-group">
        <label for="gds-cr-one" class="col-sm-2 control-label">Region</label>
        <div class="col-sm-10">
            <select name="region" class="form-control" id="gds-cr-one"></select>
        </div>
    </div>
    <br>
    <div class="ideaStatus">
        <label for="status">Idea Status</label>
        <br>
        <select name="status" id="status">
            <option value="Initializing" selected>Initializing</option>
            <option value="In progress">In progress</option>
            <option value="Pre-launch">Pre-launch</option>
            <option value="Post-launch">Post-launch</option>
        </select>
    </div>
    <br>
    <div class="coverImg">
        <label>Cover Image</label>
        <br>
        <input type="file" name="coverImg" class="filepond">
    </div>
    <br>
    <div class="devLog">
        <label>Dev Log</label>
        <br>
        <input type="file" name="devLog" class="filepond">
    </div>
    <br>
</fieldset>